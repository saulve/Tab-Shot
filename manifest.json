{
  "name": "Screenshot",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Takes a screenshot of the current active tab and opens it in a new tab",
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "camera.png",
    "default_title": "Click to take a screenshot!"
  },
  "permissions": [
    "activeTab"
  ]
  
}
